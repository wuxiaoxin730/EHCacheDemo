<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd">

    <diskStore path="java.io.tmpdir"/>

    <terracottaConfig rejoin="true" url="localhost:9510"/>

    <cache name="ClusteringCache"
           maxEntriesLocalHeap="10000"
           maxEntriesInCache="1000"
           eternal="false"
           timeToIdleSeconds="86400"
           timeToLiveSeconds="86400">
        <terracotta/>
    </cache>


    <cache name="productEhcache"
           maxEntriesLocalHeap="1000"
           maxEntriesInCache="1000"
           eternal="false"
           timeToIdleSeconds="86400"
           timeToLiveSeconds="86400">
        <terracotta/>
    </cache>

    <cache name="StandaloneCache"
           maxEntriesLocalHeap="100"
           maxEntriesLocalDisk="1000"
           eternal="false"
           overflowToDisk="true"
           timeToIdleSeconds="300"
           timeToLiveSeconds="600"
           memoryStoreEvictionPolicy="LFU"/>

    <cache name="ExternalCache"
           maxEntriesLocalHeap="100"
           maxEntriesLocalDisk="1000"
           eternal="true"
           overflowToDisk="true"
           memoryStoreEvictionPolicy="LFU"/>

    <cache name="ShortLifeCycle1MinCache"
           maxEntriesLocalHeap="100"
           maxEntriesLocalDisk="1000"
           eternal="false"
           overflowToDisk="true"
           timeToIdleSeconds="30"
           timeToLiveSeconds="60"
           memoryStoreEvictionPolicy="LFU"/>

    <!-- 缓存半小时 -->
    <cache name="halfHour"
           maxElementsInMemory="10000"
           eternal="false"
           timeToIdleSeconds="1800"
           timeToLiveSeconds="1800">
        <terracotta/>
    </cache>
</ehcache>